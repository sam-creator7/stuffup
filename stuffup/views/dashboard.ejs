                <script>

                let pages = document.querySelectorAll(".page");
                for(let i=0;i<pages.length;++i){
                  pages[i].style.display = 'none';
                }


                window.onhashchange = function(){
                  render(window.location.hash);
                };

                function render(hashkey) {
                  //first hide all divs
                  let pages = document.querySelectorAll(".page");
                  for(let i=0;i<pages.length;++i){
                    pages[i].style.display = 'none';
                  }

                  //unhide which user selects
                  switch (hashkey) {
                    case "":pages[0].style.display = 'block';
                      break;
                      case "#profile":pages[0].style.display = 'block';
                        break;
                        case "#order":pages[1].style.display = 'block';
                          break;
                          case "#Billing":pages[2].style.display = 'block';
                            break;
                            case "#addresses":pages[3].style.display = 'block';
                              break;

                    default:pages[0].style.display = 'block';


                  }

                }
                </script>

